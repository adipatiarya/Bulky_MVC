@model Product

<form method="post">
	<input asp-for="Id" hidden/> 
	<div class="border border-primary p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Product</h2>
			<hr />
		</div>
		@* <div asp-validation-summary="ModelOnly"></div> *@
		<div class="mb-3 row p-1">
			<label class="p-0" asp-for="Title"></label>
			<input asp-for="Title" type="text" class="form-control" disabled/>
		
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0" asp-for="Author"></label>
			<input asp-for="Author" type="number" class="form-control" disabled/>
		</div>
		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
			</div>
		</div>
	</div>
</form>
