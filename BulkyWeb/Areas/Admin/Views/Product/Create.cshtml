@model ProductVM

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0  py-4">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white">Create Product</h2>
			</div>
		</div>

	</div>
	<div class="card-body p-4">
		<form method="post">
			<div class="border p-3">
				<div class="row pb-2">
					<h2 class="text-primary">Create Product</h2>
					<hr />
				</div>
				@* <div asp-validation-summary="ModelOnly"></div> *@
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Product.Title" type="text" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="@Model.Product.Title"></label>
					
					<span asp-validation-for="Product.Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<textarea asp-for="Product.Description" type="text" class="form-control border-0 shadow"></textarea>
					<label class="ms-2" asp-for="@Model.Product.Description"></label>
					<span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Product.ISBN" type="text" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="@Model.Product.ISBN"></label>
					
					<span asp-validation-for="@Model.Product.ISBN" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Product.Author" type="text" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="@Model.Product.Author"></label>
					<span asp-validation-for="@Model.Product.Author" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Product.ListPrice" type="number" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="@Model.Product.ListPrice"></label>

					<span asp-validation-for="@Model.Product.ListPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Product.Price" type="number" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="@Model.Product.Price"></label>

					<span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Product.Price50" type="text" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="@Model.Product.Price50"></label>
					<span asp-validation-for="@Model.Product.Price50" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Product.Price100" type="number" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="@Model.Product.Price100"></label>

					<span asp-validation-for="@Model.Product.Price100" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Product.ImageUrl" type="text" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="@Model.Product.ImageUrl"></label>
					<span asp-validation-for="@Model.Product.ImageUrl" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					@* <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select border-0 shadow">
						<option disabled selected>--Select Category--</option>
					</select> *@

					<select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
						<option disabled selected>--Select Category--</option>
					</select> 
					<label class="ms-2" asp-for="@Model.Product.CategoryId"></label>

					<span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>
				</div>
				<div class="row pt-2">
					<div class="col-6">
						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>
					<div class="col-6">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
					</div>
				</div>
			</div>
		</form>


	</div>
</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}
