@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0  py-4">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white">Create Product</h2>
			</div>
		</div>

	</div>
	<div class="card-body p-4">
		<form method="post">
			<div class="border p-3">
				<div class="row pb-2">
					<h2 class="text-primary">Create Product</h2>
					<hr />
				</div>
				@* <div asp-validation-summary="ModelOnly"></div> *@
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" type="text" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Title"></label>
					
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<textarea asp-for="Description" type="text" class="form-control border-0 shadow"></textarea>
					<label class="ms-2" asp-for="Description"></label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" type="text" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="ISBN"></label>
					
					<span asp-validation-for="ISBN" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Author" type="text" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Author"></label>
					<span asp-validation-for="Author" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" type="number" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="ListPrice"></label>

					<span asp-validation-for="ListPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price" type="number" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Price"></label>

					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price50" type="text" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Price50"></label>
					<span asp-validation-for="Price50" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price100" type="number" class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Price100"></label>

					<span asp-validation-for="Price100" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					@* <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select border-0 shadow">
						<option disabled selected>--Select Category--</option>
					</select> *@

					<select asp-for="CategoryId" asp-items="@(ViewData["Categories"] as IEnumerable<SelectListItem>)" class="form-select border-0 shadow">
						<option disabled selected>--Select Category--</option>
					</select> 
					<label class="ms-2" asp-for="CategoryId"></label>

					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>
				<div class="row pt-2">
					<div class="col-6">
						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>
					<div class="col-6">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
					</div>
				</div>
			</div>
		</form>


	</div>
</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}
