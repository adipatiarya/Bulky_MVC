@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
<form method="post">
	<div class="border border-primary p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>
		@* <div asp-validation-summary="ModelOnly"></div> *@
		<div class="mb-3 row p-1">
			<label class="p-0" asp-for="Category.Name"></label>
			<input asp-for="Category.Name" type="text" class="form-control" disabled/>
			
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0" asp-for="Category.DisplayOrder"></label>
			<input asp-for="Category.DisplayOrder" type="number" class="form-control" disabled />
		
		</div>
		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6">
				<a asp-page="/categories/index" class="btn btn-outline-secondary form-control">Back to List</a>
			</div>
		</div>
	</div>
</form>
